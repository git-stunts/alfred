{
  "name": "@git-stunts/alfred",
  "version": "0.5.0",
  "description": "Production-grade resilience patterns for async ops: retry/backoff+jitter, circuit breaker, bulkhead, timeout.",
  "type": "module",
  "sideEffects": false,
  "main": "./src/index.js",
  "types": "./src/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/index.d.ts",
      "default": "./src/index.js"
    },
    "./testing": {
      "types": "./src/testing.d.ts",
      "default": "./src/testing.js"
    },
    "./package.json": "./package.json"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "author": "James Ross <james@flyingrobots.dev>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/git-stunts/alfred.git"
  },
  "files": [
    "src",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "ROADMAP.md",
    "jsr.json",
    "package.json"
  ],
  "keywords": [
    "resilience",
    "resiliency",
    "retry",
    "backoff",
    "jitter",
    "decorrelated-jitter",
    "circuit-breaker",
    "circuitbreaker",
    "bulkhead",
    "timeout",
    "fault-tolerance",
    "async"
  ],
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "vitest": "^2.1.8"
  }
}
